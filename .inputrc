# Be 8 bit clean.
set input-meta on 
set output-meta on

# some defaults / modifications for the emacs mode
$if mode=emacs

# allow the use of the Home/End keys on all platforms
"\e[1~": beginning-of-line
"\e[4~": end-of-line
"\e[7~": beginning-of-line
"\e[8~": end-of-line
"\eOH": beginning-of-line
"\eOF": end-of-line
"\e[H": beginning-of-line
"\e[F": end-of-line

# allow the use of the Delete/Insert keys
"\e[3~": delete-char
"\e[2~": quoted-insert

# alternate mappings for "page up" and "page down" to search the history
 "\e[5~": history-search-backward
 "\e[6~": history-search-forward

# mappings for Ctrl-left-arrow and Ctrl-right-arrow for word moving
"\e[1;5C": forward-word
"\e[1;5D": backward-word
"\e[5C": forward-word
"\e[5D": backward-word
"\e\e[C": forward-word
"\e\e[D": backward-word

# reserve all Alt+digit combos for gnome-terminal or irssi
"\e-":
"\e0":
"\e1":
"\e2":
"\e3":
"\e4":
"\e5":
"\e6":
"\e7":
"\e8":
"\e9":

# append slash to tab-completed dir symlinks
set mark-symlinked-directories on

# ignore case when tab-completing
set completion-ignore-case on

# only show the uncompleted parts of the available completions
set completion-prefix-display-length 2

# show possible tab completions immediately
set show-all-if-ambiguous on
set show-all-if-unmodified on

# cycle through available completions
Control-j: menu-complete-backward
Control-k: menu-complete

# no bells
set bell-style none
