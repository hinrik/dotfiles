# make the caption line less ugly with vertically split windows
caption string "%{= kw} "

# clear the screen properly when vim (et al) exits
altscreen on

# no visual bell, thanks
vbell off

# keep a decent amount of scrollback
defscrollback 1000

# window numbering should start at 1, not 0
bind c screen 1
bind 0 select 10

sessionname irc
screen -t awl 1 cat .irssi/_windowlist
split -v
resize 19
focus
screen -t irc 2 irssi
